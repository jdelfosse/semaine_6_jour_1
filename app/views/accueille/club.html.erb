<body>
  <table class="table">
    <thead class="thead-light">
      <tr>
        <th scope="col"></th>
        <th scope="col">Prenom</th>
        <th scope="col">Nom</th>
        <th scope="col">Email</th>
      </tr>
    </thead>
    <tbody>
      <% @user_id = 1 %>
      <% @all_users.each do |user| %>

          <tr>
            <th scope="row" id="20"><a><%= @user_id %></a></th>
            <td id="21"><a ><%= user[:first_name] %></a></td>
            <td id="22"><a ><%= user[:last_name] %></a></td>
            <td id="23"><a ><%= user[:email] %></a></td>
          </tr>

        <% @user_id += 1 %>
      <% end %>
    </tbody>
  </table>
</body>
