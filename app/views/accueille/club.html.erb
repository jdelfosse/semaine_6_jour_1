<body>
  <table class="table">
    <thead class="thead-light">
      <tr>
        <th scope="col"></th>
        <th scope="col">Prenom</th>
        <th scope="col">Nom</th>
        <th scope="col">Email</th>
      </tr>
    </thead>
    <tbody>
      <% @user_id = 1 %>
      <% @all_users.each do |user| %>
        <tr>
          <th scope="row" id="20"><%= @user_id %></th>
          <td id="21"><%= user[:first_name] %></td>
          <td id="22"><%= user[:last_name] %></td>
          <td id="23"><%= user[:email] %></td>
        </tr>
        <% @user_id += 1 %>
      <% end %>
    </tbody>
  </table>
</body>
